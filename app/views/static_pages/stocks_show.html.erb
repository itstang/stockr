<h1><%= @stock.company %> (<%= @stock.symbol %>)</h1>

<div id="container" style="width:100%; height:400px;"></div>
<div class="row stock">
    <div class="container">
        <div class="jumbotron text-center col-md-6">
            <div class= "jumbo-header chart">
                Chart
            </div>
            <div class= "jumbotron-content">
                <div class="row">
                    <div class="col-md-6">
                        <ul>
                            <li><b>Bidding price: </b><%= @stock_data[0].bid %></li>
                            <li><b>Asking price: </b><%= @stock_data[0].ask %></li>
                            <li><b>High: </b><%= @stock_data[0].high %></li>
                            <li><b>Low: </b><%= @stock_data[0].low %></li>
                            <li><b>Moving Average 50 Day: </b><%= @fifty_day_exp_MA %></li>
                            <li><b>Moving Average 20 Day: </b><%= @twenty_day_exp_MA %></li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <button type="button" class="btn btn-success" data-toggle="modal" data-target="#buyModal">BUY</button>
                        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#sellModal">SELL</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="jumbotron text-center col-md-6">
            <div class= "jumbo-header price">
        		Price
        	</div>

        	<div class= "jumbotron-content">

        	</div>

        </div>
    </div>
</div>

<div class="row stock">
    <div class="container">
        <div class="jumbotron text-center col-md-6">
        <div class= "jumbo-header history">
        	History of Stock
        </div>
        <div class= "jumbotron-content">
			  <table class="table table-hover">
			    <thead>
			      <tr>
			        <th>Date</th>
			        <th>Open</th>
			        <th>High</th>
			        <th>Low</th>
			        <th>Close</th>
			      </tr>
			    </thead>
			    <tbody>
			      	<% @historical_data[0..4].each do |date_data| %>
			      		<tr>
			  			<td><%= date_data['trade_date'] %></td>
			  			<td>$<%= date_data['open'] %></td>
			  			<td>$<%= date_data['high'] %></td>
			  			<td>$<%= date_data['low'] %></td>
			  			<td>$<%= date_data['close'] %></td>
			  			</tr>
					<% end %>

			    </tbody>
			  </table>
	       </div>
        </div>


        <div class="jumbotron text-center col-md-6">
            <div class= "jumbo-header news">
        		News
        	</div>

        	<div class= "jumbotron-content">

        	</div>

        </div>
    </div>
</div>

<%= javascript_tag do %>
$(function () {
console.log(<%= @open_history %>);
	var url= 'https://www.highcharts.com/samples/data/jsonp.php?filename=' + '<%= @stock.symbol %>'.toLowerCase() + '-c.json&callback=?';
    var start = Date.now() - 24*3600*1000*360;
    $.getJSON(url, function (data) {
        // Create the chart
        console.log(data);
        $('#container').highcharts('StockChart', {

        	xAxis: {
            type: 'datetime',
            dateTimeLabelFormats: {
                day: '%b %e'
            }
        },
        	<!-- xAxis: {min: 1417996800000, max: 1448928000000}, -->
            rangeSelector:{
                enabled:false
            },

            title : {
                text : '<%= @stock.symbol %> Stock Price'
            },
            <!-- console.log(<%= @open_history %>), -->
            series : [{
                name : 'Open',
                data : <%= @open_history %>,
                pointStart: start,
            	pointInterval: 24 * 3600 * 1000 * 1.4549,
                tooltip: {
                    valueDecimals: 2
                }
            },
			{
                name : 'Close',
                data : <%= @close_history %>,
                pointStart: start,
            	pointInterval: 24 * 3600 * 1000 * 1.4549,
                tooltip: {
                    valueDecimals: 2
                }
            },
            {
                name : 'High',
                data : <%= @high_history %>,
                pointStart: start,
            	pointInterval: 24 * 3600 * 1000 * 1.4549,
                tooltip: {
                    valueDecimals: 2
                }
            },
            {
                name : 'Low',
                data : <%= @low_history %>,
                pointStart: start,
            	pointInterval: 24 * 3600 * 1000 * 1.4549,
                tooltip: {
                    valueDecimals: 2
                }
            }
            ]
        });
    });

});
<% end %>



<%= link_to 'Scrape', scrape_media(@stock.symbol) %>

<!-- Buy Modal -->
<div id="buyModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Buy Stock</h4>
      </div>
      <div class="modal-body">
        <p><b>Bidding price: </b><%= @stock_data[0].bid %></p>
        <%= form_for :user_owns, url: stocks_buy_path do |f| %>
          <b>Number of shares:</b>
          <%= f.number_field(:shares) %>
          <%= f.hidden_field :symbol, :value => @stock.symbol %>
          <%= f.hidden_field :price, :value => @stock_data[0].bid %>
          <br><br>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Buy", :class => "btn btn-success" %>
        <% end %>
        
      </div>
    </div>

  </div>
</div>

<!-- Sell Modal -->
<div id="sellModal" class="modal fade" role="dialog">
  <div class="modal-dialog">

    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Sell Stock</h4>
      </div>
      <div class="modal-body">
        <p><b>Bidding price: </b><%= @stock_data[0].bid %></p>
        <%= form_for :user_owns, url: stocks_sell_path do |f| %>
          <b>Number of shares:</b>
          <%= f.number_field(:shares) %>
          <%= f.hidden_field :symbol, :value => @stock.symbol %>
          <%= f.hidden_field :price, :value => @stock_data[0].bid %>
          <br><br>
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <%= f.submit "Sell", :class => "btn btn-danger" %>
        <% end %>
      </div>
    </div>

  </div>
</div>
